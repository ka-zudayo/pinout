<h1>新規勤怠記録</h1>

<%= form_with(model: @attendance, url: attendances_path, method: :post) do |form| %>
  <div>
    <%= form.label :date, 'Date' %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.label :start_time, 'Start Time' %>
    <%= form.time_field :start_time %>
  </div>

  <div>
    <%= form.label :end_time, 'End Time' %>
    <%= form.time_field :end_time %>
  </div>

  <div>
    <%= form.submit '記録する' %>
  </div>
<% end %>

<%= link_to '一覧に戻る', attendances_path %>
